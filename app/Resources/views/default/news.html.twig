{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ post.title }}</h1>
        <div>
            <p>{{ post.content }}</p>
            <p>{{ post.CreatedAt | date("d-m-Y H:i") }}</p>
        </div>
        <hr>
        <h3>Komentarze:</h3>

        {{ form(form) }}
<button type="button" class="btn btn-danger pull-right">Dodaj komentarz</button>
    </div>
{% endblock %}